{
  "version": 2,
  "builds": [
    {
      "src": "src/server.js",
      "use": "@vercel/node",
      "config": {
        "maxLambdaSize": "50mb",
        "includeFiles": ["prisma/**"]
      }
    }
  ],
  "build": {
    "commands": ["npm install", "npx prisma generate"]
  },
  "routes": [{ "src": "/(.*)", "dest": "src/server.js" }]
}
