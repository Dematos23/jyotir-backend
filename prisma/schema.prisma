generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id            String           @id @default(uuid()) @unique
  email         String        @unique
  name          String
  lastname      String
  spiritualName String?
  password      String
  // reserva       Reserva[]     @relation("UserReserva")
  // UserReserva   UserReserva[]
  role          Role
  state         UserState
}

enum Role {
  DEV
  SUPER_ADMIN
  ADMIN
  EXTERNO
}

enum UserState {
  ACTIVO 
  INACTIVO
}

